<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <springProperty scope="" name="application_name" source="spring.application.name" />

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>%date %green(%level) %yellow([%thread]) %cyan(%logger{10}) [%file : %line] %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="K8S_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d %level [%thread]  %logger{10} [%file : %line] %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="net.logstash.logback.encoder.LogstashEncoder">
      <includeMdcKeyName>traceId</includeMdcKeyName>
      <includeMdcKeyName>spanId</includeMdcKeyName>
      <includeMdcKeyName>fileName</includeMdcKeyName>
      <includeMdcKeyName>application_name</includeMdcKeyName>
    </encoder>
  </appender>

  <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/json/${application_name}.json</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/json/${application_name}-%d{yyyy-MM-dd}.json.gz</fileNamePattern>
      <maxHistory>30</maxHistory>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
    <encoder class="net.logstash.logback.encoder.LogstashEncoder">
      <includeMdcKeyName>traceId</includeMdcKeyName>
      <includeMdcKeyName>spanId</includeMdcKeyName>
      <includeMdcKeyName>fileName</includeMdcKeyName>
      <includeMdcKeyName>application_name</includeMdcKeyName>
    </encoder>
  </appender>

  <springProfile name="test,local">
    <root level="info">
      <appender-ref ref="STDOUT" />
    </root>
  </springProfile>
  <springProfile name="dev">
    <root level="info">
      <appender-ref ref="K8S_STDOUT" />
    </root>
  </springProfile>
  <springProfile name="qa,uat,prod">
    <root level="info">
      <appender-ref ref="K8S_STDOUT" />
    </root>
  </springProfile>

</configuration>